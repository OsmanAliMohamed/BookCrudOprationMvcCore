@using BooksCrudOperation.Models
@model List<Book>
@{
    ViewData["Title"] = "Index";
}

<h2>Books</h2>
<hr />

<a class="btn btn-primary" asp-area="" asp-controller="Book" asp-action="AddBook">AddBook</a>
<div style="display:inline-flex;position:relative;left:250px" >
    <form class="form-inline my-2 my-lg-0" asp-controller="Book" asp-action="Search">
        <input class="form-control mr-sm-2" type="search" name="Title" value="@ViewBag.val" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Description</th>
            <th>Date Of Adding</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
            <td><a href="/Book/Details/@book.Id">@book.Title</a></td>
            <td>@book.Author</td>
            <td>@book.Description</td>
            <td>@book.TimeOfAdd</td>
            <td>
                <a class="btn btn-primary" href="/Book/OpenFormEdit/@book.Id">Edit</a>
            </td>
            <td>
                <a class="btn btn-danger" href="/Book/DeleteBook/@book.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
